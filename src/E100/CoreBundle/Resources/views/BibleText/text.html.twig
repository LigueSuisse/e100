{% extends "::base.html.twig" %}

{% block title %}{{ 'homepage.title' | trans }}{% endblock %}

{% block content %}
    <div class="row-fluid">
      <div class="span12">
        <div class="span7">
          <blockquote>
            <h1>{{ text.title }}</h1>
              <a href="{{ path('addFavorites', { 'id': text.id }) }}" class="btn btn-small btn-warning add-favorite"><i class="icon-star icon-white"></i>{{ 'random.button.favorites' | trans }}</a>

            <p class="lead">{{ text.bibleRef}}</p>
            <p>
                {{ text.bibleText | raw }}
            </p>
          </blockquote>
          <br />
          <a href="#" class="btn btn-success btn-large"><i class="icon-ok icon-white"></i>{{ 'random.button.read' | trans }}</a>
          <br /><br />
          <a href="#" class="btn btn-info btn-small"><i class="icon-thumbs-up icon-white"></i>{{ 'random.button.facebook' | trans }}</a>
          <a href="#" class="btn btn-small"><i class="icon-envelope"></i>{{ 'random.button.send' | trans }}</a>
          <br /><br />
        </div>
        <div class="span4 offset1 alert alert-error">
          <h2 class="normal-color">Comment</h2>
          <p class="normal-color">
            {{ text.comment }}
          </p>
          <br />
          <a href="{{ path('newNote', { 'id': text.id }) }}" class="btn btn-inverse btn-small"><i class="icon-pencil icon-white"></i>{{ 'random.button.note' | trans }}</a>
          <br />
          <hr />
          <br />
          <h4>Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor ?</h4>
          <br />
        </div>
      </div><!--/span-->
    </div><!--/row-->
{% endblock %}
