{% extends "::base.html.twig" %}

{% block title %}{{ 'notes.title' | trans }}{% endblock %}

{% block body_class %}edit-notes{% endblock %}

{% block content %}
    <div class="row-fluid">
      <h1>{{ 'notes.action.edit' | trans }}</h1>
      <p>{{ note.text.title }}</p>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <form action="{{ path('editNote', { 'id': note.id }) }}" method="post" class="form-horizontal" {{ form_enctype(form) }}>

           <div class="control-group">
        {{ form_widget(form) }}
            </div>
            <div class="control-group">
              <div class="controls">
                <input type="submit" class="btn-primary" value="{{ 'notes.action.edit' | trans }}"/>
              </div>
          </div>
        </form>
      </div><!--/span-->
    </div><!--/row-->
{% endblock %}
