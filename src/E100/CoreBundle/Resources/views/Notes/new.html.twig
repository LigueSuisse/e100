{% extends "::base.html.twig" %}

{% block title %}{{ 'notes.title' | trans }}{% endblock %}

{% block content %}
    <div class="row-fluid">
      <div class="span12">
        <h1>{{ 'notes.welcome.title' | trans }}</h1>
        <h2>Text: {{ text.title }}</h2>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <form action="{{ path('newNote', { 'id': text.id }) }}" method="post" class="form-horizontal" {{ form_enctype(form) }}>
          <fieldset>
           <div class="control-group">
              <label class="control-label" for="form_notetext">{{ 'notes.notetext' | trans }}</label>
              <div class="controls">
                {{ form_widget(form.noteText) }}
              </div>
            </div>
            {{ form_rest(form) }}
            <div class="control-group">
              <div class="controls">
                <input type="submit" class="btn-primary" value="{{ 'notes.action.new' | trans }}"/>
              </div>
            </div>
          </fieldset>
        </form>
      </div><!--/span-->
    </div><!--/row-->
{% endblock %}
